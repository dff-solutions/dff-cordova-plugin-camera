<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android"
        id="dff-cordova-plugin-camera"
        version="0.3.0">

    <name>Camera Plugin</name>
    <description>Camera Plugin</description>
    <author>dff solutions</author>

    <js-module src="www/CameraPlugin.js" name="CameraPlugin">
        <clobbers target="CameraPlugin"/>
    </js-module>

    <!--Android-->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="CameraPlugin">
                <param name="android-package" value="com.dff.cordova.plugin.camera.CameraPlugin"/>
                <param name="onload" value="true"/>
            </feature>
        </config-file>

        <config-file target="AndroidManifest.xml" parent="/manifest">
            <uses-feature android:name="android.hardware.camera"/>
            <uses-permission android:name="android.permission.CAMERA"/>
            <uses-feature android:name="android.hardware.camera.autofocus"/>

            <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
            <!--
            <uses-permission
                android:name="android.permission.FLASHLIGHT"
                android:permissionGroup="android.permission-group.HARDWARE_CONTROLS"
                android:protectionLevel="normal"/> -->
        </config-file>

        <config-file target="AndroidManifest.xml" parent="/manifest/application">
            <!-- <activity android:name="src/com/dff/cordova/plugin/camera/activities/CameraActivity"></activity> -->
            <activity android:name="com.dff.cordova.plugin.camera.activities.CameraActivity">
                <intent-filter>
                    <!--<action android:name="ACTION_PLAY_VIDEO"/>-->
                    <category android:name="android.intent.category.DEFAULT"/>
                </intent-filter>
            </activity>
        </config-file>

        <source-file
            src="src/android/com/dff/cordova/plugin/camera/CameraPlugin.java"
            target-dir="src/com/dff/cordova/plugin/camera"/>
        <source-file
            src="src/android/com/dff/cordova/plugin/camera/activities/CameraActivity.java"
            target-dir="src/com/dff/cordova/plugin/camera/activities"/>
        <source-file
            src="src/android/com/dff/cordova/plugin/camera/R/R.java"
            target-dir="src/com/dff/cordova/plugin/camera/R"/>


        <source-file
            src="src/android/res/layout/activity_camera.xml"
            target-dir="res/layout"/>
        <source-file
            src="src/android/res/drawable/ic_flash_off_white_24px.xml"
            target-dir="res/drawable"/>
        <source-file
            src="src/android/res/drawable/ic_flash_on_white_24px.xml"
            target-dir="res/drawable"/>
        <source-file
            src="src/android/res/drawable/ic_panorama_fish_eye_white_48px.xml"
            target-dir="res/drawable"/>
        <source-file
            src="src/android/res/drawable/ic_switch_camera_white_24px.xml"
            target-dir="res/drawable"/>
        <source-file
            src="src/android/res/values/dimens.xml"
            target-dir="res/values"/>

    </platform>

</plugin>