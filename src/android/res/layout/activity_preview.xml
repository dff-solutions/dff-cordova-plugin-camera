<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/activity_preview"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button_cancel"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_toStartOf="@+id/button_close"
            android:background="@null"
            android:gravity="center"
            android:src="@drawable/ic_close_white_48px"/>

        <ImageButton
            android:id="@+id/button_repeat"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_toStartOf="@+id/button_save"
            android:background="@null"
            android:gravity="center"
            android:src="@drawable/ic_refresh_white_48px"/>

        <ImageButton
            android:id="@+id/button_ok"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:background="@null"
            android:gravity="center"
            android:src="@drawable/ic_arrow_forward_white_48px"/>

    </LinearLayout>

</RelativeLayout>